<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginXamarinMVOP.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Login application" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Zadejte jméno:" HorizontalTextAlignment="Start" TextColor="Black" FontSize="20" Margin="20,10,0,0"/>
        <Entry x:Name="e_jmeno" Placeholder="Jmeno" Margin="20,5,20,20" Text="{Binding Name}"></Entry>
        <Label Text="Zadejte heslo:" HorizontalTextAlignment="Start" TextColor="Black" FontSize="20" Margin="20,0,0,0"/>
        <Entry IsPassword="true" x:Name="e_heslo" Placeholder="Heslo" Margin="20,5,20,20"></Entry>
        <Button Text="Login" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
